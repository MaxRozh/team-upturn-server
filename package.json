{
  "name": "team-upturn-server",
  "version": "0.1.0",
  "description": "Team Upturn server",
  "repository": "git@github.com:MaxRozh/team-upturn-server.git",
  "author": "Maxim Rozhaev",
  "license": "MIT",
  "private": true,
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,libs}/**/*.ts' --fix --quiet --cache --color",
    "check-types": "tsc --pretty --noemit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "test:related": "jest -o --passWithNoTests",
    "update-release-tag": "bash workers/update-release-tag.sh",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.2",
    "@nestjs/core": "^8.1.2",
    "@nestjs/graphql": "^9.1.1",
    "@nestjs/platform-express": "^8.1.2",
    "@nestjs/mongoose": "^9.0.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "apollo-server": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "graphql": "^16.0.1",
    "graphql-tools": "^8.2.0",
    "graphql-query-complexity": "^0.10.0",
    "graphql-subscriptions": "^2.0.0",
    "joi": "^17.4.2",
    "mongoose": "^6.0.12",
    "nodemailer": "^6.7.0",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/mongodb": "^4.0.7",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/graphql": "^14.5.0",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/joi": "^17.2.3",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.6",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "pre-commit": "^1.2.2",
    "prompts": "^2.4.2",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=12.22.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:related"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
